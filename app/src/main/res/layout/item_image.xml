<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/value_170dp"
    android:id="@+id/imageLayout"
    android:background="@color/lightDark"
    android:elevation="@dimen/value_5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_height="@dimen/value_0dp"
        android:layout_weight="2"
        android:src="@drawable/image_background"
        android:padding="@dimen/value_5dp" />

    <LinearLayout
        android:id="@+id/item_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/value_5dp">

        <TextView
            android:id="@+id/name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="@string/name"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/value_18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/date"
            android:textColor="@android:color/white"
            android:textSize="@dimen/value_15sp" />

    </LinearLayout>

</LinearLayout>